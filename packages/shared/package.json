    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.57.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  }
